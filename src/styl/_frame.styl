.frame__user-block
  display: flex
  flex-direction: row-reverse
  justify-content: center
  margin-top: 64px

  +respond-to($small)
    margin-top: 44px

  +respond-to($xsmall)
    margin-top: 24px

.frame__btn-wrapper
  position: relative
  margin-left: 32px
  &:first-child
    margin-left: 0

  +respond-to($xsmall)
    margin-left: 44px

.frame__btn-wrapper--share
  order: 2

.frame__btn
  position: relative
  width: 128px
  height: 58px
  padding: 16px
  text-align: center
  border: 1px solid rgba(248, 106, 96, .3)
  border-radius: 5px
  box-sizing: border-box
  cursor: pointer
  transition: .25s ease-in
  background: #ffffff

  +respond-to($xsmall)
    width: 122px
    height: 48px
    padding: 11px

  &:hover
    background: rgba(248, 106, 96, .1)

    .frame__btn-text
      border-bottom: 1px solid transparent

  &:active
    background: #ffffff

.frame__btn--share
  &:after
    content: ''
    position: relative
    display: inline-block
    width: 16px
    height: 16px
    margin-left: 8px
    top: 3px
    background: url(images/svg/share-icon.svg) center no-repeat

.frame__btn--embed
  &:after
    content: ''
    position: relative
    display: inline-block
    width: 27px
    height: 16px
    margin-left: 8px
    top: 3px
    background: url(images/svg/embed-icon.svg) center no-repeat

.frame__btn-container--share
  position: absolute
  visibility: hidden
  top: 75px
  left: -20px

  +respond-to($xsmall)
    top: 65px

.frame__btn-socials
  position: relative
  display: flex
  padding: 24px
  border: 1px solid rgba(248, 106, 96, .3)
  border-radius: 3px
  background: #ffffff
  box-shadow: 0 4px 6px 0 rgba(0,0,0,0.10)
  z-index: 1
  &:before
    content: ''
    position: absolute
    top: -8px
    left: 50%
    transform: translateX(-50%)
    width: 18px
    height: 8px
    background: url(images/svg/triangle.svg)
    background-size: cover
    border-bottom: 1px solid #ffffff

.frame__btn-socials-item
  display: flex
  justify-content: center
  align-items: center
  width: 32px
  height: 32px
  border-radius: 50%
  box-sizing: border-box
  margin-right: 12px

  &:last-child
    margin-right: 0

.frame__btn-socials-item--fb
  border: 1px solid #cdd5e4

  &:hover
    background: #eaeef4

.frame__btn-socials-item--tw
  border: 1px solid #cfeaf9

  &:hover
    background: #e5f3fd

.frame__btn-socials-item--go
  border: 1px solid #fee4e2

  &:hover
    background: #feecec

.frame__btn-container--embed
  position: absolute
  visibility: hidden
  top: 75px
  right: 0

  +respond-to($xsmall)
    top: 65px

.frame__btn-embed
  position: relative
  display: flex
  flex-direction: column
  width: 400px
  padding: 24px
  background: #ffffff
  border-radius: 3px
  border: 1px solid rgba(248, 106, 96, .3)
  box-shadow: 0 4px 6px 0 rgba(0,0,0,0.10)
  z-index: 1
  &:before
    content: ''
    position: absolute
    top: -8px
    right: 47px
    transform: translateX(-50%)
    width: 18px
    height: 8px
    background: url(images/svg/triangle.svg)
    background-size: cover
    border-bottom: 1px solid #ffffff

  +respond-to($xsmall)
    width: 226px

.frame__btn-embed-text
  height: 64px
  overflow-y: scroll
  margin-bottom: 16px
  font-size: 12px
  line-height: 16px
  border: 1px solid rgba(248, 106, 96, .3)
  border-radius: 3px

.frame__btn-embed-copy
  width: 156px
  display: inline-block
  color: #ffffff
  text-transform: uppercase
  font-size: 12px
  line-height: 16px
  font-weight: 600
  padding: 8px 14px 8px 14px
  outline: none
  border: none
  background: rgba(248, 106, 96, 1)
  border-radius: 3px
  cursor: pointer
  margin: 0 auto
  &:hover
    background: rgba(248, 106, 96, .7)
  &:active
    background: rgba(248, 106, 96, 1)

  +respond-to($xsmall)
    font-size: 10px

.frame__btn-embed-copy.frame__btn-embed-copy--light-blue
  background: #4080d7

.frame__btn-text
  font-size: 12px
  line-height: 26px
  color: #f86a60
  font-weight: 600
  border-bottom: 1px solid rgba(248, 106, 96, .3)
  text-transform: uppercase
  transition: .25s ease-in

  +respond-to($xsmall)
    font-size: 10px

.frame__btn-embed-text
  resize: none

.frame-wrapper
  display: flex
  justify-content: center
  +respond-to($xsmall)
    height: 3804px

.frame-wrapper iframe
  +respond-to($xsmall)
    width: 698px

.frame__btn-container.visible
  visibility: visible

.frame-container
  display: block
